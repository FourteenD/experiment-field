.item
  display flex
  align-items center
  margin .15rem auto
  padding .2rem .3rem
  width 7.1rem
  border 1px solid #ddd
  border-radius .15rem
  background #fff
  font-size .32rem

  .check
    width .5rem
    height .5rem
    border 1px solid #999
    border-radius 1rem

  .check_activity
    border none
    background linear-gradient( 135deg, #42e695, #3bb2b8 )

  .content
    display block
    flex 1
    margin-left .2rem

  .del
    color red
