.wrap
  position fixed
  bottom 0
  display flex
  width 7.5rem
  height 1rem
  background $themeColor

.input_wrap
  display flex
  justify-content center
  align-items center
  width 70%

  >.input
    padding 0 .5rem
    width 80%
    height 70%
    border-radius 1rem
    background rgba( 50, 113, 174, .5 )
    color #ebeee8
    font-weight 600
    font-size .32rem

  input::placeholder
    color #d5ebe1

.add
  display flex
  justify-content center
  align-items center
  width 30%
  height 100%
  background rgba( 255, 255, 255, .2 )
  color #fff
  font-weight 600
  font-size .4rem
